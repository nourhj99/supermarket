<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="462.4" prefWidth="426.4" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Login">
   <center>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="462.0" prefWidth="426.0" style="-fx-background-color: black;">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <children>
                  <Label text="Login" textFill="#ecebeb" VBox.vgrow="NEVER">
                     <VBox.margin>
                        <Insets bottom="50.0" left="180.0" right="100.0" top="50.0" />
                     </VBox.margin>
                     <font>
                        <Font name="System Bold" size="32.0" />
                     </font>
                  </Label>
                  <Label fx:id="wrongLogin" textFill="#f70505" />
                  <TextField fx:id="username" prefHeight="26.0" prefWidth="336.0" promptText="Username">
                     <VBox.margin>
                        <Insets bottom="10.0" left="60.0" right="60.0" />
                     </VBox.margin>
                  </TextField>
                  <PasswordField fx:id="password" promptText="Password">
                     <VBox.margin>
                        <Insets left="60.0" right="60.0" top="10.0" />
                     </VBox.margin>
                  </PasswordField>
                  <CheckBox mnemonicParsing="false" text="Remember me" textFill="#f4f3f3">
                     <VBox.margin>
                        <Insets left="160.0" top="40.0" />
                     </VBox.margin>
                  </CheckBox>
                  <Button fx:id="button" mnemonicParsing="false" onAction="#userLogin" prefHeight="23.0" prefWidth="66.0" style="-fx-background-color: blue;" text="Login" textFill="#fff9f9">
                     <VBox.margin>
                        <Insets left="185.0" top="50.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
